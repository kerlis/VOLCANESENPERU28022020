        <ImageView
            android:id="@+id/logoigp"
            style="@style/logoigp_normal_port3"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center|center_vertical"
            android:src="@drawable/logonuevoclasico" />


    </RelativeLayout>

    <TextView
