<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_sismosvolcan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.usuario.volcanesperu.Alertadecenizasdatos">
        <RelativeLayout
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/encabezado2">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include
                        android:id="@+id/head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/encabezado"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"
                android:layout_below="@+id/encabezado2"
                android:background="@color/azulbackground"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/titulopantalla_detalles"
                    style="@style/titulo_layer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textAlignment="center">

                    <RelativeLayout
                        android:id="@+id/bloque0_p2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal">

                        <RelativeLayout
                            android:id="@+id/b22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="@color/blanco"
                                android:text="Alerta de DispersiÃ³n de Cenizas"/>


                        </RelativeLayout>


                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/titulopantalla_detalles"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/blanco"

                    android:elevation="5dp">

                    <RelativeLayout
                        android:id="@+id/bloque0_p"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_alignParentTop="true"
                        android:gravity="center_horizontal">
                        <!--android:background="@drawable/fondovolcan2"-->
                        <RelativeLayout
                            android:id="@+id/b2"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            >
                            <ImageView
                                android:id="@+id/estado_volcan"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:gravity="center_vertical"
                                android:src="@drawable/volcaniconx"/>
                        </RelativeLayout>

                        <TextView android:layout_width="match_parent"
                            android:layout_below="@+id/b2"
                            android:id="@+id/volcannombre"
                            android:textAlignment="center"
                            android:textColor="@color/azulbackground"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_below="@+id/bloque0_p"
                        android:layout_height="match_parent">

                        <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp">

                            <TextView
                                android:textAlignment="center"
                                android:id="@+id/volcan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:textSize="15dp"
                                android:paddingRight="5dp"
                                android:textColor="@color/azulbackground"
                                android:layout_alignParentStart="true"/>

                            <TextView
                                android:id="@+id/pueblos"
                                android:layout_width="match_parent"
                                android:textSize="12dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/azulbackground"
                                android:layout_below="@+id/volcan" />

                            <TextView
                                android:id="@+id/tipodeevento"
                                android:paddingLeft="5dp"
                                android:textSize="12dp"
                                android:paddingRight="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/azulbackground"

                                android:layout_below="@+id/pueblos" />

                            <TextView
                                android:id="@+id/direccion"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:layout_width="match_parent"
                                android:textSize="12dp"
                                android:textColor="@color/azulbackground"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tipodeevento" />

                            <TextView
                                android:id="@+id/radio"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textSize="12dp"
                                android:layout_width="match_parent"
                                android:textColor="@color/azulbackground"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/direccion" />

                            <TextView
                                android:id="@+id/fecha"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textSize="12dp"
                                android:layout_width="match_parent"
                                android:textColor="@color/azulbackground"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/radio" />

                            <TextView
                                android:id="@+id/hora"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textSize="12dp"
                                android:textColor="@color/azulbackground"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/fecha" />

                            <TextView
                                android:id="@+id/simulacro"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textSize="12dp"
                                android:textColor="@color/azulbackground"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/hora"
                                />







                            <TextView
                                android:id="@+id/observaciconeslabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/simulacro"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="Observaciones: "
                                android:textColor="@color/azulbackground"
                                android:textSize="12dp" />

                            <EditText
                                android:id="@+id/observacicones"
                                android:layout_marginTop="10dp"
                                android:focusable="false"
                                android:textSize="12dp"
                                android:paddingLeft="5dp"
                                android:editable="false"
                                android:paddingRight="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/observaciconeslabel"
                                android:layout_alignParentStart="true"
                                android:background="@drawable/fondotextarea"
                                android:gravity="top"
                                android:inputType="textMultiLine"
                                android:overScrollMode="always"
                                android:padding="15dp"
                                android:scrollbarStyle="insideInset"
                                android:scrollbars="vertical"
                                android:textColor="@color/azulbackground" />




                            <TextView
                                android:id="@+id/recomendacioneslabel"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="Recomendaciones: "
                                android:textColor="@color/azulbackground"
                                android:layout_width="match_parent"
                                android:textSize="12dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/observacicones" />


                            <EditText
                                android:id="@+id/recomendaciones"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="5dp"
                                android:focusable="false"
                                android:editable="false"
                                android:textSize="12dp"
                                android:paddingRight="5dp"
                                android:textColor="@color/azulbackground"
                                android:layout_width="match_parent"
                                android:layout_below="@+id/recomendacioneslabel"
                                android:layout_height="wrap_content"
                                android:background="@drawable/fondotextarea"
                                android:gravity="top"
                                android:inputType="textMultiLine"
                                android:overScrollMode="always"
                                android:padding="15dp"
                                android:scrollbarStyle="insideInset"
                                android:scrollbars="vertical"/>






                            <TextView
                                android:layout_width="match_parent"
                                android:layout_below="@+id/recomendaciones"
                                android:layout_height="wrap_content"
                                android:id="@+id/alertadecnizasfotter"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:text="ALERTA DE CENIZAS"
                                android:textAlignment="center"
                                android:textColor="@color/blanco"
                                android:textStyle="bold" />








                            <!--opciones en enlaces-->
                            <RelativeLayout android:layout_width="match_parent"
                                android:layout_below="@+id/alertadecnizasfotter"
                                android:layout_marginTop="5dp"

                                android:layout_height="wrap_content"
                                android:textAlignment="center">
                                <RelativeLayout android:layout_width="210dp"
                                    android:backgroundTint="@color/colorPrimary"
                                    android:layout_centerHorizontal="true"
                                    android:layout_height="match_parent"
                                    android:padding="0dp" >
                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:background="@drawable/fondoiconoreportes3"
                                        android:id="@+id/b6"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:layout_height="50dp">
                                        <TextView  android:layout_width="wrap_content"
                                            android:id="@+id/compartir"
                                            android:layout_height="wrap_content"
                                            style="@style/iconoreportesestilo"
                                            android:gravity="center"
                                            android:layout_centerHorizontal="true"
                                            android:text="@string/comparte"
                                            android:layout_gravity="center_vertical"
                                            android:layout_centerVertical="true">
                                        </TextView>
                                    </RelativeLayout>
                                    <TextView android:layout_width="wrap_content"
                                        android:layout_below="@+id/b6"
                                        android:layout_centerHorizontal="true"
                                        android:textStyle="bold"
                                        android:textSize="10dp"
                                        android:layout_marginTop="20dp"
                                        android:text="COMPARTIR"
                                        android:layout_height="wrap_content"/>
                                </RelativeLayout>
                            </RelativeLayout>



                            <!--                    android:hint="Recomendaciones: "
                            -->
                        </RelativeLayout>
                    </ScrollView>
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>



    <RelativeLayout android:layout_width="230dp"
        android:id="@+id/mDrawerBlock"
        android:layout_gravity="start"
        android:background="@color/blanco"
        android:choiceMode="singleChoice"
        android:divider="@android:color/darker_gray"
        android:layout_height="match_parent">
        <include
            android:id="@+id/ty"
            layout="@layout/list" />
    </RelativeLayout>


</android.support.v4.widget.DrawerLayout>

